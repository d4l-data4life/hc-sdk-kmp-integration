<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp"
    >


    <ImageView
        android:id="@+id/document_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/ui_spacing_single"
        android:layout_marginEnd="@dimen/ui_spacing_single"
        android:layout_marginStart="@dimen/ui_spacing_single"
        android:layout_marginTop="@dimen/ui_spacing_single"
        android:contentDescription="Document image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/document_item_title"
        android:layout_width="228dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/document_item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/document_item_image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/document_item_text"
        android:layout_width="228dp"
        android:layout_height="21dp"
        android:layout_marginBottom="@dimen/ui_spacing_single"
        android:layout_marginEnd="@dimen/ui_spacing_single"
        android:layout_marginStart="8dp"
        android:text="Text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/document_item_image"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
